<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>tablero</title>
        <script type="text/javascript" src="../src/js/function.js"></script>
        <script
            src="https://code.jquery.com/jquery-3.4.0.js"
            integrity="sha256-DYZMCC8HTC+QDr5QNaIcfR7VSPtcISykd+6eSmBW5qo="
            crossorigin="anonymous">
        </script>
    </head>
    <body>
        <table  align='center' border=1 cellspacing=1 cellpadding=1>
            <tr>
                <td>                    
                    <table border='1' id='player'>
                        <caption>{{name}}</caption>                                
                        <thead>
                            <tr>
                                <th scope='col'>#</th>
                                {% for i in 0..9 %}
                                    <th scope='col'>{{i}}</th>
                                {% endfor %}                                        
                            </tr>
                        </thead>
                        <tbody>
                            {% for keyx, line in tablero %}
                                <tr>
                                    <td scope='col'> {{keyx}} </td>
                                    {% for keyy, item in line %}            
                                        {% set idTdPlayer = (keyx ~ keyy) %}
                                        {% if item == 'A'  %}
                                            <td bgcolor='white' id="{{idTdPlayer}}" >▒</td>
                                        {% elseif item == 'X' %}
                                            <td bgcolor='red' id="{{idTdPlayer}}"> {{item}} </td>
                                        {% else %}
                                            <td id="{{idTdPlayer}}"> {{item}} </td>
                                        {% endif %}                
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>                        
                </td>
                <td>                    
                    <table border='1' id='enemy'>
                        <caption>Enemy</caption>
                        <thead>
                            <tr>
                                <th scope='col'>#</th>
                            {% for  i in 0..9 %} 
                                <th scope='col'> {{i}} </th>
                            {% endfor %}
                            </tr>
                        </thead>
                        <tbody>
                        {% for keyx,line in enemyTable %}
                            <tr>
                                <td scope='col'> {{keyx}} </td>
                                {% for keyy, item  in line %}               
                                    {% set idTdEnemy = (keyx ~ keyy) %}
                                    {% if item =='A' %}
                                        <td bgcolor='white' id="{{idTdEnemy}}" clickeable onclick='BattleShip.shot({{keyx}} , {{keyy}} )'>▒</td>
                                    {% elseif item =='X' %}
                                        <td bgcolor='red' id="{{idTdEnemy}}" > {{item}} </td>
                                    {% else %}
                                        <td id="{{idTdEnemy}}" clickeable onclick='BattleShip.shot({{keyx}} , {{keyy}} )'> {{item}} </td>                                                      
                                    {% endif %}
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
        </table>
    </body>
</html>